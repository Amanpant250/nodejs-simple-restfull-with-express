div(class='fullwidth inline')
    h2(class='inline') Product Form
form(role="form" class="form-horizontal")
    div(id="form-error-message" v-show="view.error !== ''")
        div(class="alert alert-danger")
            strong Error! &nbsp; 
            span(v-text="view.error")
    div(class="form-group")
        label(class="control-label col-sm-2" for="title") Product Title :
        div(class="col-sm-10")
            input(type='text', name='title', id='title', v-model="product.title", class="form-control", required)
    div(class="form-group")
        label(class="control-label col-sm-2" for="description") Product Description :
        div(class="col-sm-10")
            textarea(name='description', id='description', v-model="product.description", class="form-control")
    div(class="form-group")
        label(class="control-label col-sm-2" for="price") Product Price :
        div(class="col-sm-10")
            div(class="input-group")
                div(class="input-group-addon") Rp
                input(type='number', name='price', id='price', v-model="product.price", class="form-control")
                div(class="input-group-addon") .00
    div(class="form-group")
        div(class="col-sm-2")
        div(class="col-sm-10")
            a(href="#insert" @click="doneInsert()", v-show="view.state === 'insert'", class='btn btn-success margin')
                    span(class="glyphicon glyphicon-floppy-disk" aria-hidden="true")
                    span(class="margin") Save
            a(href="#update" @click="doneEdit()", v-show="view.state !== 'insert'", class='btn btn-success margin')
                    span(class="glyphicon glyphicon-floppy-disk" aria-hidden="true")
                    span(class="margin") Save
            a(href="#home" @click="cancelEditMode()" class='btn btn-danger margin')
                span(class="glyphicon glyphicon-arrow-left" aria-hidden="true")
                span(class="margin") Cancel

